@model BitcoinTestNetWebWallet.Models.DepositAddress

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Generated Deposit Address</label>
                <input class="form-control" value="@TempData.Peek("NewAddress").ToString()" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label">Comment (optional)</label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add to Wallet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
